<Window x:Class="notepadByYS.aboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:notepadByYS"
        mc:Ignorable="d"
        Title="aboutWindow" Height="250" Width="400">

    

        <DockPanel>

            <StatusBar DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Button Name="close" Content="Close " HorizontalAlignment="Right" Click="close_Click"/>
            </StatusBar>
        <TextBlock  DockPanel.Dock="Top" Name="about" TextWrapping="Wrap" Text="TextBlock" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </DockPanel>


</Window>
