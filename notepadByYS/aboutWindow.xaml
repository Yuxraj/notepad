<Window x:Class="notepadByYS.aboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:notepadByYS"
        mc:Ignorable="d"
        Title="aboutWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Name="about" TextWrapping="Wrap" Text="TextBlock"/>
        <DockPanel Margin="0,392,0,0">
            <StatusBar DockPanel.Dock="Bottom" HorizontalAlignment="Stretch">
                <StatusBar.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.114"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </StatusBar.RenderTransform>
                <Button Content="Button"/>

            </StatusBar>
        </DockPanel>
    </Grid>
</Window>
